head 
    style 
        include estilos.css 
div(class="jumbotron")
    h1 "Vista de Productos"
    if hayProductos
        div(class="table-responsive")
            table(class="table table-dark")
                tr(style="color: rgb(255, 255, 0);")
                    th Nombre 
                    th Precio 
                    th Foto
                each producto in productos 
                    tr 
                        td(style="color: rgb(254, 254, 245);")=producto.title 
                        td(style="color: rgb(254, 254, 245);")=producto.price 
                        td
                            img(width="50" src=producto.thumbnail alt="not found")
    else
        h3 "No se encontraron productos"

    <div class="mt-2">
            <a href="/" class="btn btn-danger" role="button">Ir al Formulario</a>
            <a href="/api/productos/vista" class="btn btn-info" role="button">Ir a la Lista</a>
    </div>